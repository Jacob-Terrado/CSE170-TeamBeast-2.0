<script>
  $(document).ready(function () {
    var midnight = new Date();
    midnight.setHours(23, 59, 59, 0);
    if (document.cookie = "username = emotionCookie; expires = midnight") {
    }
    else {
      document.cookie = "username = emotionCookie; expires = midnight";
      var currentUser = Parse.User.current();
      var emo = showEmotion();
      if ((emo - 5) < 0) {
        currentUser.set("emotion", 0);
        currentUser.save();
      }
      else {
        currentUser.set("emotion", emo - 5);
        currentUser.save();
      }
    }
    document.getElementById("mood").innerHTML = moodSet();
  });
