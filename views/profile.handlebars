<script>
  var encouragementArray = new Array();
  var index = 0;

  encouragementArray[0] = "I hope you're doing well!";
  encouragementArray[1] = "Let's hangout with your friends today :D!";
  encouragementArray[2] = "Don't be afraid to socialize!";
  encouragementArray[3] = "Let's go somewhere!";
  encouragementArray[4] = "Take small steps";
  encouragementArray[5] = "Let's hangout with Team Beast!";

  function sendEncouragement() {
    if (window.location == "http://friendler.herokuapp.com/profile") {
      Materialize.toast(encouragementArray[index], 3000);

      index = ++index % 6;
      setTimeout('sendEncouragement()', 10000);
      return;
    }
  }
</script>

