    <div class = "valign-wrapper">
      <table class = "respsonsive-table centered highlighted bordered striped" id="inven">
        <thead>
          <tr>
              <th data-field="image">Item</th>
              <th data-field="name">Name</th>
              <th data-field="price">Stock</th>
          </tr>
        </thead>

        <tbody>
          <tr id = "row1" style="display:none">
            <td><a onClick="itemUsed('Super Ball');"><img class = "activator responsive-img" style="width: 120px; height:120px;" src = "images/ball.jpg"></a></td>
            <td><a onClick="itemUsed('Super Ball');"><p id = "itemName">Super Ball</a></td>
            <td><a onClick="itemUsed('Super Ball');"><p id = "inv"></p></a></td>
          </tr>
          <tr id = "row2" style="display:none">
            <td><a onClick="itemUsed('Friendler Food');"><img class = "activator responsive-img" style="width: 120px; height:120px;" src = "images/ban.jpg"></a></td>
            <td><a onClick="itemUsed('Friendler Food');"><p id = "itemName">Friendler Food</a></td>
            <td><a onClick="itemUsed('Friendler Food');"><p id = "inv2"></p></a></td>
          </tr>
          <tr id = "row3" style="display:none">
            <td><a onClick="itemUsed('Coupon');"><img class = "activator responsive-img" style="width: 120px; height:120px;" src = "images/coupon.jpg"></a></td>
            <td><a onClick="itemUsed('Coupon');"><p id = "itemName">Coupon</a></td>
            <td><a onClick="itemUsed('Coupon');"><p id = "inv3"></p></a></td>
          </tr>
          <tr id = "row4" style ="display:none">
            <td><a onClick="itemUsed('Mystery Gift');"><img class = "activator responsive-img" style="width: 120px; height:120px;" src = "images/gift.png"></a></td>
            <td><a onClick="itemUsed('Mystery Gift');"><p id = "itemName">Mystery Gift</a></td>
            <td><a onClick="itemUsed('Mystery gift');"><p id = "inv4"></p></a></td>
          </tr>
        </tbody>
      </table>
  </div>

      <div id="UseModal" class="modal modal-fixed-footer">
        <div class="modal-content">
          <p>You used:</p> <input type="text" name="invName" id="invName" value=""/>
          <p>Your Friendler feels happier!</p>
          <div id="update"></div>
          <div class="center card-action">
            <a href="inventory" onClick="$('#UseModal').closeModal();">Confirm</a>
          </div>
        </div>
      </div>

      <div id="PresentModal" class="modal modal-fixed-footer">
        <div class="modal-content">
          <p>Wow you have been such a good friend, this is a gift from your friendler</p>
          <img class="responsive img" src="images/ama.jpg" width = 80%>
          <p>Your Friendler's happiness is at its max!!!</p>
          <div class="center card-action">
            <a href="inventory" onClick="$('#PresentModal').closeModal();">Confirm</a>
          </div>
        </div>
      </div>

  </div>
