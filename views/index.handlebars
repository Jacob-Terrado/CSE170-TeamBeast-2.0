<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Friendler</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS for Materialize -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/css/materialize.css"/>
</head>
<body onLoad="Materialize.fadeInImage('#main-content');">
<!-- Navigation Header -->
<nav>
  <div class="nav-wrapper teal">
    <a href="#" class="brand-logo center">Friendler</a>
  </div>
</nav>

<!-- Content -->
<div class="container">
  <div id="main-content" class="card">
    <br>
    <div class="container center">
      <h3 class="header orange-text">Welcome to Friendler</h3>
      <img class="responsive-img" src="/images/corgi_friendler.png">
    </div>
    <div class="container">
      <form class="col s12 center">
        <div class="row center">
          <div class="col s1">&nbsp;</div>
          <div class="input-field col s10">
            <input id="usernameLogin" type="text" required>
            <label for="usernameLogin">Username</label>
          </div>
          <div class="col s1">&nbsp;</div>
        </div>
        <div class="row">
          <div class="col s1">&nbsp;</div>
          <div class="input-field col s10">
            <input id="passwordLogin" type="password" required>
            <label for="passwordLogin">Password</label>
          </div>
          <div class="col s1">&nbsp;</div>
        </div>
        <div class="row center col s12">
          <button id="loginButton" class="btn waves-effect waves-light" onClick="login()" type="submit">Login</button>
        </div>
        <div class="row center col s12">
          <a href="#signUpModal" onClick="$('#signUpModal').openModal();">New User? Sign up here</a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Sign Up Modal -->
<div id="signUpModal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <div class="container">
      <h5>Create an Account</h5>
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input id="firstName" type="text" required>
              <label for="firstName">First Name</label>
            </div>
            <div class="input-field col s6">
              <input id="lastName" type="text" required>
              <label for="lastName">Last Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="username" type="text" required>
              <label for="username">Username</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="email" required>
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" required>
              <label for="password">Password</label>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button id="signUpButton" class="btn waves-effect waves-light" onClick="signUp()" type="submit" name="action">Sign
      Up
    </button>
  </div>
</div>

{{> footer}}

{{> materializeScripts}}
{{> parseScripts}}
</body>
</html>