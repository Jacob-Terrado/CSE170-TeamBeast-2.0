      <div class = "valign-wrapper">
      <table class = "respsonsive-table centered highlighted bordered striped">
        <thead>
          <tr>
              <th data-field="image">Item</th>
              <th data-field="name">Name</th>
              <th data-field="price">Price</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><a onClick="confMod('{{description}}', '{{name}}', '{{image}}', {{value}})"><img class = "activator responsive-img" src = "images/{{image}}"></a></td>
            <td><a onClick="confMod('{{description}}', '{{name}}', '{{image}}', {{value}})">{{name}}</a></td>
            <td><a onClick="confMod('{{description}}', '{{name}}', '{{image}}', {{value}})"><p id = "pts">{{value}}</p></a></td>
          </tr>
        </tbody>
      </table>
  </div>


      <div id="ConfirmModal" class="modal modal-fixed-footer">
        <div class="modal-content">
            <input type="text" name="descript" id="descript" value=""/>
            <p>Buy the Item? The price, in points, is: </p>
            <input type="text" name="price" id="price" value=""/>
          <div class="left card-action">
            <a onClick="purchase()">Yes</a>
          </div>
          <div class="right card-action">
            <a onClick="$('#ConfirmModal').closeModal();">No</a>
          </div>
        </div>
      </div>

      <div id="BuyModal" class="modal modal-fixed-footer">
        <div class="modal-content">
          <p>Thanks for buying that item!</p>
          <p>Updated Points:</p>
          <div id="update"></div>
          <div class="center card-action">
            <a href="store" onClick="$('#BuyModal').closeModal();">Confirm</a>
          </div>
        </div>
      </div>

      <div id="FailModal" class="modal modal-fixed-footer">
        <div class="modal-content">
          <p>Sorry, you do not have enough points</p>
          <div class="center card-action">
            <a href="store" onClick="$('#FailModal').closeModal();">Confirm</a>
          </div>
        </div>
      </div>
    {{/each}}
