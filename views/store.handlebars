<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Friendler</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS for Materialize -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="../css/materialize.css"/>
</head>
<body>
{{> navbar}}

<!-- Content -->
<div class="container">
  <div id="main-content" class="card">
    <h2 class="header center black-text">Welcome to the Store!</h2>
    <div class="container center">
      <img class="responsive-img" src="http://www.kelowna.com/wp-content/uploads/2010/01/100111-monopoly-man.jpg">
    </div>
  </div>

  <div class="ui four doubling stackable cards">
    {{#each store}}
      <div class="col s0 m1 l2">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator responsive-img" src="images/{{image}}">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><span id="name">{{name}}</span><i
              class="material-icons right">more_vert</i></span>
            <p id="pts">{{value}}</p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>
            <p id="descript">{{description}}</p>
            <div class="center card-action">
              <a onClick="purchase()">Buy</a>
            </div>
          </div>
        </div>
      </div>

      <div id="BuyModal" class="modal modal-fixed-footer">
        <div class="modal-content">
          <p>Thanks for buying that item!</p>
          <p>Updated Points:</p>
          <div id="update"></div>
          <div class="center card-action">
            <a href="store" onClick="$('#BuyModal').closeModal();">Confirm</a>
          </div>
        </div>
      </div>

      <div id="FailModal" class="modal modal-fixed-footer">
        <div class="modal-content">
          <p>Sorry, you do not have enough points</p>
          <div class="center card-action">
            <a href="store" onClick="$('#FailModal').closeModal();">Confirm</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

{{> footer}}

{{> materializeScripts}}
{{> parseScripts}}
{{> checkInFab}}
<script>
  var currentUser = Parse.User.current();
  currentUser.fetch();
  var point = currentUser.get("points");
  document.getElementById("update").innerHTML = point - 1000;
</script>

</body>
</html>