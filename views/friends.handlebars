<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Friendler</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- CSS for Materialize -->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link type="text/css" rel="stylesheet" href="../css/materialize.css"/>
</head>
<body onLoad="Materialize.fadeInImage('#main-content')">
  {{> navbar}}

  <div id="main-content" class="container">
    <ul class="collection-header" id="friendsList">
      <li class="collection-header"><h4>Friends List</h4></li>
      {{#each friends}}
      <li class="collection-item">
        <input type="checkbox" class="filled-in" id="{{name}}">
        <label for="{{name}}">{{name}}</label>
      </li>
      {{/each}}
    </ul>
    <!-- Modal Trigger -->
    <button data-target="modal1" class="btn modal-trigger" onClick="$('#addFriendModal').openModal();">Add Friend</button>
  </div>
  
  <div id="addFriendModal" class="modal modal-fixed-footer">
    <h5>Add a new friend!</h5>
    <div class="modal-content">
      <div class="row">
        <div class="input-field col s12">
          <input type="text" id="username" required>
          <label for="username">Enter friend's username</label>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close teal btn-flat" onClick="addFriends()">Add Friend</a>
    </div>
  </div>
  
  {{> footer}}

  {{> materializeScripts}}
  {{> parseScripts}}
</body>
</html>