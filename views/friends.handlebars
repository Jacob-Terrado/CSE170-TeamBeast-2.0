<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Friendler</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS for Materialize -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="../css/materialize.css"/>
</head>
<body onLoad="Materialize.fadeInImage('#main-content'); listFriends();">
{{> navbar}}

<div id="main-content" class="container">
  <ul class="collection-header" id="friendsList">
    <li class="collection-header"><h4>Friends List</h4></li>
  </ul>
  <!-- Modal Trigger -->
  <button data-target="modal1" class="btn modal-trigger" onClick="$('#addFriendModal').openModal();">Add Friend</button>
  <a href="checkin2">
    <button class="btn" onClick="storeFriendCount();">Check-in</button>
  </a>
</div>

<div id="addFriendModal" class="modal modal-fixed-footer">
  <h5>Add a new friend!</h5>
  <div class="modal-content">
    <div class="row">
      <div class="input-field col s12">
        <input type="text" id="friendName" required>
        <label for="friendName">Enter friend's username</label>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="modal-action modal-close teal btn-flat" onClick="addFriends()">Add Friend</a>
  </div>
</div>

{{> footer}}

{{> materializeScripts}}
{{> parseScripts}}
{{> checkInFabFriends}}
</body>
</html>